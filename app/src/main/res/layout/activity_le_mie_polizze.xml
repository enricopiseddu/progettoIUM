<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_12"
            android:id="@+id/linearLayout">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#84A8C4"
                android:navigationIcon="@drawable/ic_stat_name"
                app:title="Le mie polizze"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/modello_v1"
                android:visibility="gone"
                android:textSize="22dp"

                android:drawableLeft="@drawable/icona_verde_polizza"
                android:layout_marginLeft="1dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="VEDI"
                android:id="@+id/vedi1"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="MODIFICA"
                android:id="@+id/modifica1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/modello_v2"
                android:textSize="22dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/icona_rossa_polizza"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="VEDI"
                android:id="@+id/vedi2"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="MODIFICA"
                android:id="@+id/modifica2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/modello_v3"
                android:visibility="gone"
                android:textSize="22dp"
                android:drawableLeft="@drawable/icona_gialla_polizza"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="VEDI"
                android:id="@+id/vedi3"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="MODIFICA"
                android:id="@+id/modifica3"
                />


        </LinearLayout>
    </ScrollView>
